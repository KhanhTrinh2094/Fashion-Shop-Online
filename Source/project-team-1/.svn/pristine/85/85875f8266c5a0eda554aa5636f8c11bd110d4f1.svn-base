<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:c="http://xmlns.jcp.org/jsp/jstl/core">
    <h:head>
        <title>Facelet Title</title>
    </h:head>
    <h:body>
        <ui:composition template="/template/myTemplate.xhtml">
            <ui:define name="content">
                <c:if test="#{not empty session.getAttribute('username')}">
                    #{facesContext.externalContext.redirect("index.xhtml")}
                </c:if>
                <div id="maincontainer">
                    <div class="container">
                        <div id="login">
                            <h1 class="headingmain"><span>Login</span></h1>
                            <f:view>
                                <h:form>
                                    <section class="returncustomer">
                                        <h2 class="heading2">Welcome to Super Market Team 4 </h2>
                                        <div class="loginbox">
                                            <h4 class="heading4">You have an account? Please login</h4>
                                            <c:if test="#{not empty message}">
                                                <div class="errors">
                                                    <ul>
                                                        <li>#{message}</li>
                                                    </ul>
                                                </div>
                                            </c:if>
                                            <div class="form-vertical">
                                                <fieldset>
                                                    <div class="control-group">
                                                        <label  class="control-label">Username :</label>
                                                        <div class="controls">
                                                            <h:inputText id="username" value="#{customerManaged.customer.username}" class="span3 input-full" required="true" requiredMessage="Username not be empty">
                                                                <f:validateLength minimum="3" maximum="30" />
                                                            </h:inputText><br />
                                                            <h:message for="username" />
                                                        </div>
                                                    </div>

                                                    <div class="control-group">
                                                        <label  class="control-label">Password:</label>
                                                        <div class="controls">
                                                            <h:inputSecret id="password" value="#{customerManaged.customer.password}" class="span3 input-full" required="true" requiredMessage="Passwords must not be blank">
                                                                <f:validateLength minimum="3" maximum="30" />
                                                            </h:inputSecret><br />
                                                            <h:message for="password" />
                                                            <br/>
                                                            <a href="#" onclick="showRecoverPasswordForm();
                                                                    return false;">Forgot password?</a>
                                                        </div>
                                                    </div>
                                                    <h:commandButton class="btn btn-success" value="Login" action="#{customerManaged.login()}" /> or <a href="DangKy.xhtml" title="Register">Register</a>
                                                </fieldset>
                                            </div>
                                        </div>
                                    </section>
                                </h:form>
                            </f:view>
                        </div>

                        <div id="recover-password" style="display:none;" class="userbox">
                            <div class="accounttype">
                                <h1 class="headingmain"><span>Restore Password</span></h1>
                            </div>		

                            <form accept-charset='UTF-8' action='/account/recover' method='post'>
                                <label for="email" class="icon-field"><i class="icon-login icon-envelope "></i></label>
                                <input type="email" value="" size="30" name="email" placeholder="Email" id="recover-email" class="text" />

                                <div class="action_bottom" style="  padding-left: 16px;">
                                    <input class="btn btn-success" type="submit" value="Gá»­i" /> | <a href="#" onclick="hideRecoverPasswordForm();
                                            return false;">Cancel</a>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </ui:define>
        </ui:composition>
    </h:body>
</html>

