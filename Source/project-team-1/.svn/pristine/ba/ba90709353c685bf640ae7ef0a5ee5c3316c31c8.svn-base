<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:c="http://xmlns.jcp.org/jsp/jstl/core"
      xmlns:f="http://xmlns.jcp.org/jsf/core">
    <h:head>
        <title>Facelet Title</title>
    </h:head>
    <h:body>
        <ui:composition template="/admin_template/myTemplate.xhtml">
            <ui:define name="content">
                <div class="content">
                    <div class="breadLine">
                        <h:form>
                            <ul class="buttons">
                                <li>
                                    <h:commandLink action="#{customerManaged.logout()}">
                                        <span class="icon-off"></span>
                                        <span class="text">Log out</span>
                                    </h:commandLink>
                                </li>
                            </ul>
                        </h:form>
                    </div>
                    <div class="workplace">
                        <script type="text/javascript" charset="utf-8">
                            $(document).ready(function() {
                                $('#example').dataTable({
                                    "aaSorting": [[7, "desc"]]
                                });
                            });
                        </script>
                        <div class="page-header">
                            <h1>Best Selling</h1>
                        </div>
                        <c:if test="#{not empty message}">
                            <div class="alert alert-success">                
                                <h4>#{message}!</h4>
                                #{messageDetails}
                            </div>
                        </c:if>
                        <div class="row-fluid">
                            <div class="span12">                    
                                <div class="head clearfix">
                                    <div class="isw-grid"></div>
                                    <h1>Best Selling</h1>  
                                    <ul class="buttons">
                                        <li><a href="javascript: window.open('#{root}/report/BestSelling.xhtml', '', 'width=' + screen.width + ', height=' + screen.height);" class="isw-print"></a></li>
                                        <li class="toggle"><a href="#"></a></li>
                                    </ul>   
                                </div>
                                <div class="block-fluid table-sorting clearfix">
                                    <table cellpadding="0" cellspacing="0" width="100%" class="table" id="example">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Name</th>
                                                <th>Category</th>
                                                <th>Brand</th>
                                                <th>Price</th>
                                                <th>Quantity</th>
                                                <th>Image</th>
                                                <th>Order</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <c:forEach items="#{productManaged.orderList}" var="row">
                                                <tr>
                                                    <td style="width: 5%">#{row.productID}</td>
                                                    <td style="width: 20%">
                                                        <h:form>
                                                            <h:commandLink action="#{productAdminManaged.details(row.productID)}">
                                                                <h6>#{row.productName}</h6>
                                                            </h:commandLink>
                                                        </h:form>
                                                    </td>
                                                    <td style="width: 15%">
                                                        <h:form>
                                                            <h:commandLink action="#{categoryAdminManaged.details(row.categoryID.categoryID)}">
                                                                #{row.categoryID.categoryName}
                                                            </h:commandLink>
                                                        </h:form>
                                                    </td>
                                                    <td style="width: 15%">
                                                        <h:form>
                                                            <h:commandLink action="#{brandAdminManaged.details(row.brandID.brandID)}">
                                                                #{row.brandID.brandName}
                                                            </h:commandLink>
                                                        </h:form>
                                                        </td>
                                                    <td style="width: 10%">
                                                        <h:outputText value="#{row.productPrice}">
                                                            <f:convertNumber pattern="###,###₫" currencySymbol="₫" type="currency"/>
                                                        </h:outputText>
                                                    </td>
                                                    <td style="width: 10%">#{row.quantity}</td>
                                                    <td style="width: 10%"><img src="#{imagesPath}/#{row.thumbImage}" style="width: 50px; height: 50px" /></td>
                                                    <td style="width: 10%">#{row.orderCount}</td>
                                                </tr>
                                            </c:forEach>                                                             
                                        </tbody>
                                    </table>
                                </div>
                            </div>                        
                        </div>
                        <div class="dr">
                            <span></span>
                        </div>
                    </div>
                </div>
            </ui:define>
        </ui:composition>
    </h:body>
</html>

