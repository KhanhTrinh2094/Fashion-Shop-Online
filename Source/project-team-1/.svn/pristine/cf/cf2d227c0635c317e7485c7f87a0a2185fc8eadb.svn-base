<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:c="http://xmlns.jcp.org/jsp/jstl/core">
    <h:head>
        <title>Product Sold Out Report</title>
        <style>
            table, th, td {
                border: 1px solid black;
                border-collapse: collapse;
            }
            th, td {
                padding: 5px;
                text-align: left;
            }
            table#t01 {
                width: 100%;    
                background-color: #f1f1c1;
            }
        </style>

    </h:head>
    <h:body>
        <h1 align="center">Product Sold Out</h1>
        Date : 
        <h:outputText value="#{session.lastAccessedTime}">
            <f:convertDateTime pattern="dd/MM/yyyy" />
        </h:outputText>
        <br /><br />

        <table style="width:100%" class="table" id="example">
            <tr>
                <th>ProductID</th>
                <th>Product Name</th>
                <th>Category</th>		
                <th>Brand</th>
                <th>Product Price</th>
                <th>Quantity</th>
                <th>OrderCount</th>
            </tr>
            <c:forEach items="#{productStatiticManaged.listSoldOut()}" var="row">
                <tr>
                    <td>#{row.productID}</td>
                    <td>#{row.productName}</td>		
                    <td>#{row.categoryID.categoryName}</td>
                    <td>#{row.brandID.brandName}</td>
                    <td>
                        <h:outputText value="#{row.productPrice}">
                            <f:convertNumber pattern="###,###₫" currencySymbol="₫" type="currency"/>
                        </h:outputText>
                    </td>
                    <td>#{row.quantity}</td>
                    <td>#{row.orderCount}</td>
                </tr>
            </c:forEach>
        </table>
        <br />
        Total Number Of Product :  #{productStatiticManaged.listSoldOut().size()}
    </h:body>
</html>

