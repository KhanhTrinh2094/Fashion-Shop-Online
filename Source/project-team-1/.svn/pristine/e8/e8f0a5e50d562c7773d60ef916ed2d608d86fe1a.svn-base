<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:f="http://xmlns.jcp.org/jsf/core">
    <h:head>
        <title>Facelet Title</title>
    </h:head>
    <h:body>
        <ui:composition template="/admin_template/myTemplate.xhtml">
            <ui:define name="content">
                <div class="content">
                    <div class="breadLine">
                        <h:form>
                            <ul class="buttons">
                                <li>
                                    <h:commandLink action="#{customerManaged.logout()}">
                                        <span class="icon-off"></span>
                                        <span class="text">Log out</span>
                                    </h:commandLink>
                                </li>
                            </ul>
                        </h:form>
                    </div>
                    <div class="workplace">
                        <div class="page-header">
                            <h1>Edit News</h1>
                        </div>  
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="head clearfix">
                                    <div class="isw-documents"></div>
                                    <h1>Edit News</h1>
                                </div>
                                <div class="block-fluid">
                                    <h:form enctype="multipart/form-data">  
                                        <div class="row-form clearfix">
                                            <div class="span3">ID:</div>
                                            <div class="span9">
                                                <input type="text" value="#{newsDetailManaged.newsDetail.newsID}" disabled="true" />
                                                <h:inputText value="#{newsDetailManaged.newsDetail.newsID}" style="display: none;">
                                                </h:inputText>
                                                
                                            </div>
                                        </div>
                                        <div class="row-form clearfix">
                                            <div class="span3">Title:</div>
                                            <div class="span9">
                                                <h:inputText id="name" value="#{newsDetailManaged.newsDetail.newsTitle}" required="true" requiredMessage="Title not be blank!">
                                                    <f:validateLength minimum="3" maximum="100" />
                                                </h:inputText>
                                                <h:messages for="name" />
                                            </div>
                                        </div>
                                        <div class="row-form clearfix">
                                            <div class="span3">Category:</div>
                                            <div class="span9">
                                                <h:selectOneMenu id="categoryID" value="#{newsDetailManaged.newsDetail.newsCateID}" required="true" requiredMessage="Please select category">
                                                    <f:selectItems value="#{newsDetailManaged.newsCateItems}"/>
                                                </h:selectOneMenu>
                                                <h:messages for="categoryID" />
                                            </div>
                                        </div>
                                      <div class="row-form clearfix">
                                            <div class="span3">Image:</div>
                                            <div class="span9">
                                                <img src="#{newsPath}/#{newsDetailManaged.newsDetail.newsImage}" style="width: 50px; height: 50px" /><br />
                                                <h:inputFile id="image" value="#{newsDetailManaged.file}" validator="#{newsDetailManaged.validateFile}" required="true" requiredMessage="Please choose image" />
                                                <h:messages for="image" />
                                            </div>
                                        </div>
                                        <div class="row-form clearfix">
                                            <div class="span3">Detail:</div>
                                            <div class="span9">
                                                <h:inputTextarea id="detail" value="#{newsDetailManaged.newsDetail.newsContent}" required="true" requiredMessage="Please input content">
                                                    <f:validateLength minimum="10" />
                                                </h:inputTextarea>
                                                <h:messages for="detail" />
                                            </div>
                                        </div>
                                        
                                        <div class="footer tar">
                                            <h:commandButton value="Update" class="btn" action="#{newsDetailManaged.updateNews()}" />
                                        </div>
                                    </h:form>
                                </div>
                                <div class="dr">
                                    <span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </ui:define>
        </ui:composition>
    </h:body>
</html>

