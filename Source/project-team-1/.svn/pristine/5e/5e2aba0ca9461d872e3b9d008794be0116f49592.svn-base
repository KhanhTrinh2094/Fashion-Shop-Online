<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:f="http://xmlns.jcp.org/jsf/core">
    <h:head>
        <title>Facelet Title</title>
    </h:head>
    <h:body>
        <ui:composition template="/admin_template/myTemplate.xhtml">
            <ui:define name="content">
                <div class="content">
                    <div class="breadLine">
                        <h:form>
                            <ul class="buttons">
                                <li>
                                    <h:commandLink action="#{customerManaged.logout()}">
                                        <span class="icon-off"></span>
                                        <span class="text">Log out</span>
                                    </h:commandLink>
                                </li>
                            </ul>
                        </h:form>
                    </div>
                    <div class="workplace">
                        <div class="page-header">
                            <h1>Details</h1>
                        </div>  
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="head clearfix">
                                    <div class="isw-documents"></div>
                                    <h1>Product Details</h1>
                                </div>
                                <div class="block-fluid">
                                    <div class="row-form clearfix">
                                        <div class="span3">ID : </div>
                                        <div class="span9">
                                            #{productAdminManaged.product.productID}
                                        </div>
                                    </div>
                                    <div class="row-form clearfix">
                                        <div class="span3">Product Name : </div>
                                        <div class="span9">
                                            #{productAdminManaged.product.productName}
                                        </div>
                                    </div>
                                    <div class="row-form clearfix">
                                        <div class="span3">Category : </div>
                                        <div class="span9">
                                            #{productAdminManaged.product.categoryID.categoryName}
                                        </div>
                                    </div>
                                    <div class="row-form clearfix">
                                        <div class="span3">Brand : </div>
                                        <div class="span9">
                                            #{productAdminManaged.product.brandID.brandName}
                                        </div>
                                    </div>
                                    <div class="row-form clearfix">
                                        <div class="span3">Price : </div>
                                        <div class="span9">
                                            <h:outputText value="#{productAdminManaged.product.productPrice}">
                                                <f:convertNumber pattern="###,###₫" currencySymbol="₫" type="currency"/>
                                            </h:outputText>
                                        </div>
                                    </div>
                                    <div class="row-form clearfix">
                                        <div class="span3">Qunatity : </div>
                                        <div class="span9">
                                            #{productAdminManaged.product.quantity}
                                        </div>
                                    </div>
                                    <div class="row-form clearfix">
                                        <div class="span3">Order : </div>
                                        <div class="span9">
                                            #{productAdminManaged.product.orderCount}
                                        </div>
                                    </div>
                                    <div class="row-form clearfix">
                                        <div class="span3">Image : </div>
                                        <div class="span9">
                                            <img src="#{imagesPath}/#{productAdminManaged.product.thumbImage}" style="width: 100px; height: 100px" />
                                        </div>
                                    </div>
                                    <div class="footer tar">
                                        <h:form>
                                            <h:commandButton class="btn" value="Edit" action="#{productAdminManaged.preUpdate(productAdminManaged.product.productID)}" />&nbsp;
                                            <h:commandButton class="btn" value="Delete" onclick="return confirm('Delete product will delete all order and comment of this product. Do you want to delete?');" action="#{productAdminManaged.deleteCategory(productAdminManaged.product)}" />&nbsp;
                                            <a href="ListSanPham.xhtml">
                                                <button type="button" class="btn">Back</button>
                                            </a>
                                        </h:form>
                                    </div>
                                </div>
                                <div class="dr">
                                    <span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </ui:define>
        </ui:composition>
    </h:body>
</html>

